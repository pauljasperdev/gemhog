# Auto-install peer dependencies
auto-install-peers = true

# Hoist tailwindcss for Next.js/PostCSS compatibility
# Tailwind CSS v4 with @import "tailwindcss" requires the package to be resolvable
public-hoist-pattern[]=*tailwindcss*
public-hoist-pattern[]=*@tailwindcss/*

# Install native binaries for current platform + x64 (CI/Lambda)
supportedArchitectures.os[]=current
supportedArchitectures.os[]=linux
supportedArchitectures.cpu[]=current
supportedArchitectures.cpu[]=x64
