{
  "name": "gemhog",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev:init": "rm -rf node_modules && pnpm install && pnpm db:start",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:native": "pnpm --filter native dev",
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter server dev",
    "db:push": "pnpm --filter @gemhog/db db:push",
    "db:studio": "pnpm --filter @gemhog/db db:studio",
    "db:generate": "pnpm --filter @gemhog/db db:generate",
    "db:migrate": "pnpm --filter @gemhog/db db:migrate",
    "db:start": "pnpm --filter @gemhog/db db:start",
    "db:watch": "pnpm --filter @gemhog/db db:watch",
    "db:stop": "pnpm --filter @gemhog/db db:stop",
    "db:down": "pnpm --filter @gemhog/db db:down",
    "check": "biome check --write .",
    "format:md": "prettier --write \"**/*.md\""
  },
  "dependencies": {
    "@gemhog/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@gemhog/config": "workspace:*",
    "@types/node": "^22.13.14",
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.3.3",
    "prettier": "^3.8.0",
    "typescript": "catalog:",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.15.1"
}
